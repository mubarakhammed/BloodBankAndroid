<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BloodRequirementActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Requirement"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="25sp"
        android:textColor="@color/material_blue"
        />


    <EditText
        android:id="@+id/beditTextClientName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:background="@drawable/stroked_square_blue_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPersonName"
        android:hint="Enter Patient Name" />

    <EditText
        android:id="@+id/beditTextBloodGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:background="@drawable/stroked_square_blue_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPersonName"
        android:hint="Enter Required BloodGroup" />

    <EditText
        android:id="@+id/beditTextContactNo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:background="@drawable/stroked_square_blue_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPersonName"
        android:hint="Enter Patient Contact No." />

    <Button
        android:id="@+id/bbuttonSaveInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Add"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:onClick="addRequirement"/>


</LinearLayout>