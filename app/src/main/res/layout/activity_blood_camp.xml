<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BloodCampActivity">

    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"

        android:onClick="addImage"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/material_blue"
        android:background="@drawable/stroked_square_blue_background"
        android:layout_marginTop="25dp"
        android:inputType="textPersonName"
        android:hint="Name of Organizer" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:textSize="15dp"

        android:textColor="@color/material_blue"
        android:background="@drawable/stroked_square_blue_background"
        android:hint="Date of BloodCamp(DD/MM/YYYY)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextPlace"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:background="@drawable/stroked_square_blue_background"
        android:inputType="textPersonName"
        android:hint="Place" />

    <Button
        android:id="@+id/saveInfoButton"
        android:onClick="saveInfo"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="Save Blood Camp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:background="@color/material_blue"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="45dp"/>

</LinearLayout>